<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:background="#e9e9eb"
    android:orientation="vertical"
 >

    <!-- TODO: Update blank fragment layout -->


    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@mipmap/drawer_top_background"
        android:orientation="horizontal"
        android:weightSum="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout6">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.15"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/drawer_pic_8"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:alpha="0.8"

                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                app:srcCompat="@mipmap/news_drawer" />

            <ImageView
                android:id="@+id/drawer_pic_1"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:alpha="0.8"

                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                app:srcCompat="@mipmap/basket_drawer" />

            <ImageView
                android:id="@+id/drawer_pic_2"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:alpha="0.8"

                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                app:srcCompat="@mipmap/search_drawer" />

            <ImageView
                android:id="@+id/drawer_pic_3"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:alpha="0.8"

                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:visibility="gone"
                app:srcCompat="@mipmap/senf_drawer" />

            <ImageView
                android:id="@+id/drawer_pic_4"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:alpha="0.8"

                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                app:srcCompat="@mipmap/faq" />

            <ImageView
                android:id="@+id/drawer_pic_5"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:alpha="0.8"
                android:onClick="onBtn1"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                app:srcCompat="@mipmap/about" />

            <ImageView
                android:id="@+id/drawer_pic_6"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:alpha="0.8"
                android:onClick="onBtn2"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:visibility="visible"
                app:srcCompat="@mipmap/contact" />

            <ImageView
                android:id="@+id/drawer_pic_7"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:alpha="0.8"
                android:onClick="onBtn3"
                app:srcCompat="@mipmap/designer" />

            <ImageView
                android:id="@+id/drawer_pic_9"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:alpha="0.8"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                app:srcCompat="@mipmap/exit_drawer" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.85"
            android:orientation="vertical">

            <TextView
                android:id="@+id/drawer8"
                android:layout_width="match_parent"
                android:layout_height="45dp"

                android:layout_marginRight="10dp"
                android:fontFamily="@font/iransans"
                android:gravity="center_vertical"
                android:text="تازه ترین خبرها"
                android:textColor="@color/black"
                android:textDirection="rtl" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/drawer1"
                    android:layout_width="match_parent"

                    android:layout_height="45dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/iransans"
                    android:gravity="center_vertical"
                    android:text="سبد خرید"
                    android:textColor="@color/black"
                    android:textDirection="rtl" />

                <TextView
                    android:id="@+id/badgeCounter"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:background="@mipmap/circle"
                    android:fontFamily="@font/iransans"
                    android:gravity="center"
                    android:maxHeight="27dp"
                    android:maxWidth="27dp"
                    android:text="66"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="13sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/drawer2"
                android:layout_width="match_parent"
                android:layout_height="45dp"

                android:layout_marginRight="10dp"
                android:fontFamily="@font/iransans"
                android:gravity="center_vertical"
                android:text="جستجوی پیشرفته"
                android:textColor="@color/black"
                android:textDirection="rtl" />

            <TextView
                android:id="@+id/drawer3"
                android:layout_width="match_parent"
                android:layout_height="45dp"

                android:layout_marginRight="10dp"
                android:fontFamily="@font/iransans"
                android:gravity="center_vertical"
                android:text="ثبت نام اصناف"
                android:textColor="@color/black"
                android:textDirection="rtl"
                android:visibility="gone" />

            <TextView
                android:id="@+id/drawer4"
                android:layout_width="match_parent"
                android:layout_height="45dp"

                android:layout_marginRight="10dp"
                android:fontFamily="@font/iransans"
                android:gravity="center_vertical"
                android:text="قوانین و شرایط استفاده"
                android:textColor="@color/black"
                android:textDirection="rtl" />

            <TextView
                android:id="@+id/drawer5"
                android:layout_width="match_parent"
                android:layout_height="45dp"

                android:layout_marginRight="10dp"
                android:fontFamily="@font/iransans"
                android:gravity="center_vertical"
                android:text="@string/drawer1"
                android:textColor="@color/black"
                android:textDirection="rtl" />

            <TextView
                android:id="@+id/drawer6"
                android:layout_width="match_parent"
                android:layout_height="45dp"

                android:layout_marginRight="10dp"
                android:fontFamily="@font/iransans"
                android:gravity="center_vertical"
                android:text="@string/drawer2"
                android:textColor="@color/black"
                android:textDirection="rtl"
                android:visibility="visible" />

            <TextView
                android:id="@+id/drawer7"
                android:layout_width="match_parent"
                android:layout_height="45dp"

                android:layout_marginRight="10dp"
                android:fontFamily="@font/iransans"
                android:gravity="center_vertical"
                android:text="@string/drawer3"
                android:textColor="@color/black"
                android:textDirection="rtl" />

            <TextView
                android:id="@+id/drawer9"
                android:layout_width="match_parent"
                android:layout_height="45dp"

                android:layout_marginRight="10dp"
                android:fontFamily="@font/iransans"
                android:gravity="center_vertical"
                android:onClick="onBtn3"
                android:text="خروج از حساب کاربری"
                android:textColor="@color/black"
                android:textDirection="rtl" />


        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/loginDrawer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/iransansbold"
        android:gravity="right"
        android:text="@string/SignupLogin"
        android:textColor="@color/white"
        android:textDirection="rtl"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.932" />


</android.support.constraint.ConstraintLayout>
